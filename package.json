{
  "name": "@traderslaunch/design-tokens",
  "version": "0.1.2",
  "type": "module",
  "description": "Shared Traders Launch design tokens (colors, fonts, gradients, tailwind helpers).",
  "sideEffects": [
    "*.css"
  ],
  "main": "./index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Traders-Launch/design-tokens.git"
  },
  "exports": {
    ".": "./index.js",
    "./tailwind": "./tailwind.js",
    "./tokens.css": "./tokens.css"
  },
  "files": [
    "index.js",
    "tailwind.js",
    "tokens.css",
    "assets/fonts/ginora_sans",
    "README.md"
  ],
  "scripts": {
    "generate": "node scripts/generate.js",
    "validate": "node scripts/validate.js",
    "test": "node scripts/validate.js",
    "check": "npm run validate",
    "release:patch": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags"
  }
}
